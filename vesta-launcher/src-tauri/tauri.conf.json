{
	"productName": "Vesta Launcher",
	"version": "0.1.0-alpha.8",
	"identifier": "net.vesta.launcher",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"security": {
			"csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' https: asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline'; font-src 'self' data:",
			"assetProtocol": {
				"enable": true,
				"scope": [
					"$APPLOCALDATA/**",
					"$APPCACHE/**",
					"$APPDATA/.VestaLauncher/**"
				]
			}
		}
	},
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": [
					"vesta"
				]
			}
		},
		"updater": {
			"endpoints": [
				"https://pub-f5abfd388a694b88b657a52e2e95b451.r2.dev/launcher/releases/latest.json"
			],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUxNUU3NUE0MjVERTI1NUUKUldSZUpkNGxwSFZlVVY3QWRoeS9HeU81bDVibG9Md2NTM2w4cjZ5WGZuRzZ6bDdoMHI3MmFyb0MK"
		}
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"windows": {
			"wix": {
				"version": "0.1.0.8"
			}
		},
		"shortDescription": "Vesta Launcher",
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
			"../resources/exit-handler/exit-handler.jar",
			"icons/icon.png"
		]
	}
}
